<t:content xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

<t:block id='view'>
	<t:outputraw value='html' />
</t:block>

<t:block id='edit'>
	<form t:type='form' t:id='htmlform'>
		<input t:type='textarea' t:value='html'/>
