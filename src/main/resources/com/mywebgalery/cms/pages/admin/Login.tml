<html t:type="layout" title='message:header.login'
	  xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
	<div>
		<t:form t:id='form'>
			<ul>
				<li>
					<label>${message:label.username}</label>
					<t:textfield value="name"/>
					<t:messages component="name"/>
				</li>
				<li>
					<label>${message:label.password}</label>
					<t:passwordfield value="pass"/>
					<t:messages component="pass"/>
				</li>
				<li>
					<input type="submit" value="${message:label.login}"/>
				</li>
			</ul>
		</t:form>
	</div>
</html>
