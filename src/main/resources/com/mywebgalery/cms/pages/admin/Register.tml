<html t:type="layout" title='message:header.register'
	  xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
	<div>
		<t:form t:id='form'>
			<ul>
				<li>
					<label>${message:label.first_name}</label>
					<t:textfield value="user.firstname"/>
					<t:messages component="name"/>
				</li>
				<li>
					<label>${message:label.last_name}</label>
					<t:textfield value="user.lastname"/>
					<t:messages component="lastname"/>
				</li>
				<li>
					<label>${message:label.email}</label>
					<t:textfield value="user.email"/>
					<t:messages component="email"/>
				</li>
				<li>
					<label>${message:label.username}</label>
					<t:textfield value="user.name"/>
					<t:messages component="name"/>
				</li>
				<li>
					<label>${message:label.password}</label>
					<t:passwordfield value="user.pass"/>
					<t:messages component="pass"/>
				</li>
				<li>
					<label>${message:label.confirm_pass}</label>
					<t:passwordfield value="confirm"/>
					<t:messages component="confirm"/>
				</li>
				<li>
					<input type="submit" value="${message:label.register}"/>
				</li>
			</ul>
		</t:form>
	</div>
</html>
